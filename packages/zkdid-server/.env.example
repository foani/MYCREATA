# Server Configuration
PORT=4000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/crelink_zkdid

# JWT Authentication
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=7d

# Telegram Bot API
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_BOT_USERNAME=your-telegram-bot-username

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:4000/auth/google/callback

# zkDID Configuration
ZKDID_PROTOCOL_VERSION=1
ZKDID_PREFIX=did:creata:zk

# Logging
LOG_LEVEL=debug

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://crelink.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Catena Chain Configuration
CATENA_RPC_URL=https://cvm.node.creatachain.com
